  <body>
    <%- include('header'); -%>
    <h1>Contact Me</h1>
    <h3>
      Please give me your name and email. I will reply to you as soon as
      possible.
    </h3>
    <form action = "/contact" method = "POST">
      <div class="form-group">
        <label for="exampleInputEmail1">Full Name</label>
        <input
          type="name"
          name="name"
          class="form-control"
          id="name"
          aria-describedby="emailHelp"
          placeholder="ex. John Doe"
        />
      </div>
      <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input
          type="email"
          name="email"
          class="form-control"
          id="email"
          aria-describedby="emailHelp"
          placeholder="ex. jsmith45@yahoo.com"
        />
      </div>
      <button id="contact-btn" type="submit" class="btn btn-primary">
        Submit
      </button>
    </form>

